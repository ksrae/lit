{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "lib": ["es2022", "dom"],
    "experimentalDecorators": true,
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "isolatedModules": true,
    "useDefineForClassFields": false,
    "baseUrl": ".",
		"paths": {
			"*": ["*", "src/*"]
		},
    "types": ["vite/client"]
  },
  "include": ["src", "src/components/button/cypress/button.cy.ts"],
  "exclude": ["node_modules"]
}
